{
  "name": "Browser Perf",
  "description": "Gets performance data from browser",
  "version": "0.1",
  "permissions": [
    "debugger",
    "tabs"
  ],
  "background": {
    "scripts": [
      "metrics/statistics.js",
      "metrics/rendering_stats.js",
      "metrics/smoothness.js",
      "chrome-extension/timeline_backend.js",
      "chrome-extension/tracing_backend.js",
      "chrome-extension/background.js"
    ]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "run_at": "document_idle",
    "all_frames": false,
    "js": ["page_scripts/vendor/scroll.js", "page_scripts/vendor/smoothness.js", "page_scripts/benchmarks.js", "chrome-extension/content-script.js"]
  }],
  "manifest_version": 2
}